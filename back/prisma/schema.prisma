generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id_user       String @id @default(uuid())
  name_user     String
  email_user    String @unique
  password_user String
  conta         String
}

model documents {
  id_doc   Int    @id @default(autoincrement())
  name_doc String
  url_doc  String @unique
}

model profissionais {
  id_prof   Int    @id @default(autoincrement())
  name_prof String
  cep_prof  Int
  cidade    String
  ocupacao  String
  sexo      String
}

model message {
  id    Int      @id @default(autoincrement())
  texto String
  data  DateTime @default(now())
}

model atividade {
  id_ativi Int    @id @default(autoincrement())
  texto    String
}
