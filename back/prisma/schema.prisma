generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model atividade {
  id_ativi Int    @id @default(autoincrement())
  texto    String
}

model documents {
  id_doc   Int    @id @default(autoincrement())
  name_doc String
  url_doc  String @unique(map: "Documents_url_doc_key")
}

model message {
  id    Int      @id @default(autoincrement())
  texto String
  data  DateTime @default(now())
}

model profissionais {
  id_prof   Int    @id @default(autoincrement())
  name_prof String
  cep_prof  Int
  cidade    String
  ocupacao  String
  sexo      String
}

model users {
  id_user       String @id
  name_user     String
  email_user    String @unique(map: "Users_email_user_key")
  password_user String
}
